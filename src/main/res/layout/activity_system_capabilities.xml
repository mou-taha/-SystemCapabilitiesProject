<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Passer un appel téléphonique -->
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez un numéro de téléphone"
            android:inputType="phone" />
        <Button
            android:id="@+id/call_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passer un appel" />

        <!-- Envoyer un SMS -->
        <EditText
            android:id="@+id/sms_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez un numéro de téléphone pour SMS" />
        <EditText
            android:id="@+id/sms_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le contenu du SMS" />
        <Button
            android:id="@+id/sms_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer un SMS" />

        <!-- Envoyer un email -->
        <Button
            android:id="@+id/email_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer un Email" />

        <!-- Partager du contenu -->
        <EditText
            android:id="@+id/share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez du texte à partager" />
        <Button
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partager" />

        <!-- Accéder à la localisation -->
        <EditText
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez une adresse" />
        <Button
            android:id="@+id/maps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ouvrir dans Google Maps" />

        <!-- Ouvrir un navigateur -->
        <EditText
            android:id="@+id/url_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez une URL" />
        <Button
            android:id="@+id/browser_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ouvrir dans le navigateur" />
    </LinearLayout>
</ScrollView>
